<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seguimient_al"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BED9BA"
    android:backgroundTint="#BED9BA"
    tools:context=".control_salud">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#267331"
        android:gravity="center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#267331"
        android:gravity="center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/recomenaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Control de salud"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="563dp"
        android:background="#77A676"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529">

        <TableLayout
            android:id="@+id/info"
            android:layout_width="348dp"
            android:layout_height="415dp"
            android:background="#77A676"
            android:stretchColumns="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.348">

            <TableRow android:layout_marginTop="20dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Identificador Médico:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtNMedico"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"

                    android:editable="false"
                    android:inputType="number"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Comidas cronometradas:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtcomidas"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="number"/>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Enfermedades"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtEnfer"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="text"/>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Calorías Consumidas:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtTotalC"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="number"/>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Medicamentos"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtmedicina"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="text"/>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Telefono"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtNumber"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="number"/>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Nutriologo"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtnutri"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="text"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_marginRight="20dp"
                    android:padding="8dp"

                    android:text="Contacto Nutriologo:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtnumNutri"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="text"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#BED9BA"
            android:onClick="MenuP"
            android:text="Regresar "
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#BED9BA"
            android:text="Actualizar"
            android:textColor="@color/black" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="267dp"
        android:layout_height="228dp"
        android:layout_marginBottom="596dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:srcCompat="@mipmap/nutriasset_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>